<launch>
  <!-- Carregar a descricao do robo a partir do URDF -->
  <param name="robot_description" command="$(find xacro)/xacro $(find martha_urdf_description)/urdf/martha_urdf.xacro"/>
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="true"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Spawn do modelo do robo no Gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model martha_urdf -x 0 -y 0 -z 0.284275 -R 0 -P 0 -Y 0"/>

  <!-- Incluir os controladores de juntas -->
  <include file="$(find martha_gazebo)/launch/controller.launch"/>

  <!-- Iniciar o RViz com configuracao predefinida para visualizacao do robo -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find martha_gazebo)/launch/urdf.rviz"/>

</launch>
